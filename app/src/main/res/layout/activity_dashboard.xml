<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/layout1">
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MysoftDashboardActivity"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true"
        tools:openDrawer="">
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headerLayout="@layout/header"
            android:background="#E8E2E6E6"
            app:menu="@menu/menu_item">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <TextView
                    android:gravity="right"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="VERSION: 1.0.11"/>
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E2E6E6">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#063970"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_menu"
                app:title="Dashboard"
                app:titleTextColor="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="-30dp"
                    android:backgroundTint="#063970"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:paddingTop="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Stay Home \nStay Safe"
                        android:textSize="25sp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prevention"
                    android:textSize="23sp"
                    android:layout_margin="10dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="5dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ic_avoid_close_contact"
                                    android:elevation="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft=".7dp"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:text="Avoid close\ncontact"/>
                            </LinearLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ic_wash_your_hands"
                                    android:elevation="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft=".7dp"
                                    android:textSize="15dp"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:text="Clean Your\nhands often"/>
                            </LinearLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="5dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ic_wear_a_mask"
                                    android:elevation="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:text="Wear a\nfacemask"/>
                            </LinearLayout>
                        </FrameLayout>
                    </TableRow>
                </TableLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="15dp"
                    android:backgroundTint="#df565e">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/ic_live_update">

                        <TextView
                            android:id="@+id/liveUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/white"
                            android:text="Live Update"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/liveUpdate"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="-20dp"
                            android:layout_marginBottom="20dp"
                            android:text="about corona virus"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/liveCard"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="#E3696F"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="29dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_right_arrow" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_symptoms_about"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Symptoms\nabout Corona"
                            android:layout_margin="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16dp"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/learnCard"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="20dp"
                            android:backgroundTint="#4B7CB6"
                            app:cardCornerRadius="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn More"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>